#!/bin/sh

IFS='
'
LDFLAGS="$LDFLAGS"
CC="${CC:-c99}"
CFLAGS="${CFLAGS:-"-O1"}"

dep() {
    for prereq in "$@"; do
        echo dep $prereq
    done
}

wait() {
    echo wait
    read ignore
}

out() {
    objs="main.o
a.o"
    dep $objs
    wait
    "$CC" $CFLAGS $LDFLAGS -o a.out $objs
}

obj() {
    name="${1%.o}"
    src="$name.c"
    dep="$name.d"
    dep "$src"
    wait
    "$CC" $CFLAGS -c "$src" -MMD
    ../../make2build.sh "$1" <"$dep"
    rm "$dep"
    wait
}

case "$1" in
    "")
        dep a.out
        wait
        ;;
    a.out) out ;;
    *.o) obj $1 ;;
esac
